.indexContainer .header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 10rpx 0;
}
.indexContainer .header .logo {
  width: 140rpx;
  height: 40rpx;
  margin: 10rpx 20rpx;
}
.indexContainer .header .search {
  position: relative;
  height: 60rpx;
  width: 420rpx;
  line-height: 60rpx;
  background-color: #eee;
}
.indexContainer .header .search .iconfont {
  position: absolute;
  font-size: 35rpx;
  top: 5rpx;
  left: 5rpx;
}
.indexContainer .header .search input {
  height: 60rpx;
  width: 370rpx;
  margin-left: 50rpx;
}
.indexContainer .header .search .placeholder {
  font-size: 26rpx;
}
.indexContainer .header button {
  width: 144rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 24rpx;
  padding: 0 4rpx;
  margin: 0 10rpx;
}
.indexContainer .scrollContainer {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  white-space: nowrap;
}
.indexContainer .scrollContainer .scroolItem {
  width: 140rpx;
  height: 100rpx;
  padding: 0 20rpx;
}
.indexContainer .scrollContainer .scroolItem .active {
  border-bottom: 2rpx solid red;
}

